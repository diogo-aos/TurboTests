{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://turbotests.example.com/schemas/questions.json",
  "title": "Questions Schema",
  "description": "Schema for parsed test questions from GIFT format",
  "type": "object",
  "required": ["version", "questions"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version for compatibility tracking",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the question set",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the test or question bank"
        },
        "author": {
          "type": "string",
          "description": "Author of the questions"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of creation"
        },
        "subject": {
          "type": "string",
          "description": "Subject or topic area"
        },
        "standards_mapping": {
          "type": "object",
          "description": "Mapping to educational standards (enterprise tier)",
          "additionalProperties": true
        }
      }
    },
    "questions": {
      "type": "array",
      "description": "Array of question objects",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "text", "correct_answer"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the question",
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "type": {
            "type": "string",
            "description": "Question type",
            "enum": ["multiple_choice", "short_answer", "essay", "matching", "true_false"]
          },
          "text": {
            "type": "string",
            "description": "The question text",
            "minLength": 1
          },
          "points": {
            "type": "number",
            "description": "Point value for the question",
            "minimum": 0,
            "default": 1
          },
          "options": {
            "type": "array",
            "description": "Answer options (for multiple choice, matching, true/false)",
            "items": {
              "type": "object",
              "required": ["label", "text"],
              "properties": {
                "label": {
                  "type": "string",
                  "description": "Option label (A, B, C, etc.)",
                  "pattern": "^[A-Z]$"
                },
                "text": {
                  "type": "string",
                  "description": "Option text",
                  "minLength": 1
                }
              }
            }
          },
          "correct_answer": {
            "description": "Correct answer(s) - format depends on question type",
            "oneOf": [
              {
                "type": "string",
                "description": "Single answer (label for MC, text for short answer)"
              },
              {
                "type": "array",
                "description": "Multiple correct answers",
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "difficulty": {
            "type": "string",
            "description": "Difficulty level (pro/enterprise tier)",
            "enum": ["easy", "medium", "hard", "expert"]
          },
          "tags": {
            "type": "array",
            "description": "Tags for categorization (pro/enterprise tier)",
            "items": {
              "type": "string"
            }
          },
          "feedback": {
            "type": "object",
            "description": "Feedback for correct/incorrect answers (enterprise tier)",
            "properties": {
              "correct": {
                "type": "string",
                "description": "Feedback shown for correct answer"
              },
              "incorrect": {
                "type": "string",
                "description": "Feedback shown for incorrect answer"
              }
            }
          },
          "partial_credit": {
            "type": "object",
            "description": "Partial credit configuration (pro/enterprise tier)",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": false
              },
              "rules": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["answer", "points"],
                  "properties": {
                    "answer": {
                      "type": "string",
                      "description": "Answer that receives partial credit"
                    },
                    "points": {
                      "type": "number",
                      "description": "Points awarded (fraction of total)",
                      "minimum": 0,
                      "maximum": 1
                    }
                  }
                }
              }
            }
          },
          "custom_attributes": {
            "type": "object",
            "description": "Custom attributes (enterprise tier)",
            "additionalProperties": true
          }
        }
      }
    }
  }
}
